{
  "name": "github-event-router",
  "version": "0.0.1-alpha.0",
  "description": "A receiver of GitHub events that fans out to multiple GitHub apps",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:ui",
    "build:server": "tsc",
    "build:ui": "cd ui && npm run build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:ui\"",
    "dev:server": "concurrently \"tsc --watch\" \"nodemon --watch dist --exec 'node --enable-source-maps' dist/server/index.js\"",
    "dev:ui": "cd ui && npm run dev",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "start": "NODE_ENV=production node --enable-source-maps dist/server/index.js",
    "db:reset": "rm -f database.sqlite* && sqlite3 database.sqlite < migrations/sqlite/001_create_tables.sql && sqlite3 database.sqlite < migrations/sqlite/002_examples.sql && sqlite3 database.sqlite < migrations/sqlite/003_event_tracking.sql && sqlite3 database.sqlite < migrations/sqlite/004_store_payload_headers.sql"
  },
  "author": "Thomas Cooper",
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.952.0",
    "@azure/event-hubs": "^6.0.0",
    "@types/pg": "^8.16.0",
    "@types/redis": "^4.0.10",
    "amqplib": "^0.10.9",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "config": "^4.1.0",
    "express": "^5.1.0",
    "kafkajs": "^2.2.4",
    "mongodb": "^7.0.0",
    "octokit": "^5.0.3",
    "pg": "^8.16.3",
    "redis": "^5.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/amqplib": "^0.10.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/config": "^3.3.5",
    "@types/express": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "nodemon": "^3.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  }
}
